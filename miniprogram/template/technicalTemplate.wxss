
.technical_scroll {
  display: flex;
  flex: 1;
  flex-direction: column;
}

.technical_table_title {
  display: flex;
  justify-content: center;
  font-size: 35rpx;
  margin: 20rpx;
}

.technical_container {
  display: flex;
  flex: 1;
  min-height: 1000rpx;
  flex-direction: column;
  margin: 5rpx;
  border: solid 3rpx black;
}

.technical_table_tr {
  display: flex;
  flex-direction: row;
  min-height: 70rpx;
  font-size: 22rpx;
  border-bottom: solid 1rpx black;
}

.technical_table_td {
  display: flex;
  align-items: center;
  justify-content: center;
  border-right: solid 1rpx black;
  word-break:break-all;
}

.technical_table_name {
  display: flex;
  flex: 1;
}

.technical_table_head_tr {
  min-height: 80rpx;
}

.technical_td_title_width {
  width: 140rpx;
}

.technical_td_input_width {
  width: 200rpx;
}

.technical_detial_title {
  height: 50rpx;
  padding-left: 20rpx;
}

.technical_detial_input_container {
  display: flex;
  flex: 1;
  min-height: 600rpx;
}

.technical_notice_container {
  margin-left: 30rpx;
  margin-bottom: 50rpx;
  font-size: 18rpx;
}





.bold {
  font-weight: bold;
}
.none_border {
  border: none;
}