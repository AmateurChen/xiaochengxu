.equipment_scroll {
  display: flex;
  flex: 1;
  flex-direction: column;
}

.equipment_table_container {
  display: flex;
  flex-direction: column;
  margin: 5rpx;
  font-size: 25rpx;
  border: solid 1rpx black;
}

.equipment_table_title {
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: solid 1rpx black;
}

.equipment_table_tr {
  display: flex;
  flex-direction: row;
  min-height: 70rpx;
  border-bottom: solid 1rpx black;
}

.equipment_table_td {
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  border-right: solid 1rpx black;
  word-break:break-all;
}

.none_border {
  border: none;
}
