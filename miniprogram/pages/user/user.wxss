
.user_container {
  display: flex;
  flex: 1;
  flex-direction: column;
}

.useritem_container {
  display: flex;
  height: 120rpx;
  width: 100%;
  background: white;
  align-items: center;
  border-bottom: solid 1rpx rgb(189, 183, 183);
}

.useritem_container image {
  height: 50rpx;
  width: 50rpx;
  margin-right: 20rpx;
}
.useritem_container text {
  margin-left: 40rpx;
}
.useritem_container input {
  flex: 1;
  height: 100%;
  justify-content: flex-end;
  text-align: right;
}


.useritem_margin_top {
  margin-top: 30rpx;
}

.useritem_btn_container{
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: center;
}

.useritem_btn_container button{
  width: 90%;
  background-color: #d81e06;
  color: white;
}

.viewclick{
  background-color: rgb(220, 220, 220);
}