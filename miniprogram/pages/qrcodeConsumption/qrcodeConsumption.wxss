.consumption_container {
  display: flex;
  flex: 1;
  flex-direction: column;
  margin: 20rpx;
}


.consumption_data_container {
  display: flex;
  min-height: 400rpx;
  flex-direction: column;
  border-radius: 10rpx;
  padding-bottom: 20rpx;
  background: rgb(240, 240, 240);
  /* border: dashed 1rpx #888; */
}

.consumption_data_add {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  justify-content: center;
  align-items: center;
  margin: 20rpx;
  border-radius: 10rpx;
  border: solid 1rpx #888;
}

.consumption_data_item_container {
  display: flex;
  flex-direction: column;
  min-height: 150rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
  background: rgb(240, 240, 240);
  /* border-bottom: dashed 1rpx #888; */
}

.consumption_data_item_info_container {
  display: flex;
  flex: 1;
  padding-left: 10rpx;
  padding-right: 10rpx;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}



.consumption_modal_input {
  height: 80rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-bottom: solid 1rpx #888;
}


.viewClick {
  background: #ddd;
}