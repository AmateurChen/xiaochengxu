
.permission_list_container {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  margin-bottom: 30rpx;
}


.permission_item_container {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  height: auto;
  background: white;
  border-radius: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.permission_item_text_container {
  display: flex;
  flex: 1;
  flex-direction: row;
  height: 200rpx;
  align-items: center;
  justify-content: space-around;
}

.permission_item_text_container text {
  font-size: 50rpx;
}

.permission_item_seal_container {
  display: flex;
  justify-content: flex-end;
  width: 93%;
  z-index: 0;
  position: absolute;
}

.permission_item_seal_container image {
  float: right;
  width: 160rpx;
  height: 160rpx;
  opacity: 0.7;
  transform: rotate(45deg);
}
.permission_item_seal_container text {
  width: 160rpx;
  margin-left: -160rpx;
  line-height: 160rpx;
  text-align: center;
  opacity: 0.7;
  transform: rotate(45deg);
  color: #d81e06;
  font-size: 30rpx;
}
.permission_item_seal_view {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  height: 160rpx;
  background-size: 160rpx;
  margin-top: -180rpx;
  margin-right: 20rpx;
  opacity: 0.7;
  transform: rotate(45deg);
  color: #d81e06;
  font-size: 30rpx;
}


.permission_item_bottom_container text {
  background: red;
  color: white;
  padding: 10rpx;
  min-width: 160rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
}

.permission_more_view {
  display: flex;
  height: 80rpx;
  margin: 20rpx;
  justify-content: center;
  align-items: center;
  background: #d81e06;
  border-radius: 10rpx;
  color: white;
}

.view_click {
  background: gray;
}

.permission_none_data_container {
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  color: gray;
}