
.record_container {
  display: flex;
  flex: 1;
  flex-direction: column;
  margin: 5rpx;
}

.record_list_container {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  margin-bottom: 30rpx;
}

.record_item_text_container {
  display: flex;
  flex: 1;
  flex-direction: row;
  height: 150rpx;
  align-items: center;
  justify-content: space-around;
}


.record_item_container {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  height: auto;
  background: white;
  border-radius: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.record_list_more_container {
  display: flex;
  margin: 20rpx;
}
.record_list_more_container button {
  width: 100%;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.record_none_data_container{
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  color: gray;
}